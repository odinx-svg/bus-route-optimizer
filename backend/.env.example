# OSRM Configuration
OSRM_URL=http://187.77.33.218:5000/route/v1/driving
OSRM_TABLE_URL=http://187.77.33.218:5000/table/v1/driving

# Database Configuration
# Set to 'false' to run without database (legacy mode)
USE_DATABASE=true

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://tutti:tutti@localhost:5432/tutti

# Debug: Log SQL queries
SQLALCHEMY_ECHO=false

# =============================================================================
# CELERY & REDIS CONFIGURATION
# =============================================================================

# Enable/disable Celery async processing
CELERY_ENABLED=true

# Redis URL for Celery broker and backend
# Format: redis://host:port/db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# Enable/disable WebSocket support
WEBSOCKET_ENABLED=true

# WebSocket heartbeat interval (seconds)
WS_HEARTBEAT_INTERVAL=30

# WebSocket ping timeout (seconds)
WS_PING_TIMEOUT=10

# =============================================================================
# OPTIMIZATION CONFIGURATION
# =============================================================================

# Minimum interval between progress updates (seconds)
OPTIMIZER_PROGRESS_INTERVAL=1.0

# Celery task time limit (seconds)
CELERY_TASK_TIME_LIMIT=3600

# Celery worker prefetch multiplier
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# Runtime mode: stable|dev
APP_RUNTIME_MODE=stable

# Comma-separated list of allowed frontend origins (for production)
# Example: CORS_ORIGINS=https://tutti-app.vercel.app,https://www.tuttiapp.com
CORS_ORIGINS=
